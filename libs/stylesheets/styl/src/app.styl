html
	min-height 100%
	width 100%
	height 100%
	&.auto
		height auto

body
	background-color bg-grey
	color body-color
	cf()
	min-height 100%
	height 100%
	&.auto
		height auto
	&.pass
		padding 175px 0

.passport
	center(800px, 20px)
	text-align center
	cf()
	p.explanation
		color #fff
		padding 2em 0
		font-weight 300
		letter-spacing .4px
	.split
		.button
			display block
			margin 0 auto
			width 100%
			max-width 30em
		.input:first-child
			input
				border-radius border-radius-normal border-radius-normal 0 0
		.input:last-child
			input
				border-radius 0 0 border-radius-normal border-radius-normal
		.input + .input
			input
				border-top 1px solid lighten(border-gray, 90%)
		& + .split
			margin-top 2em
