html
	min-height 100%
	width 100%
	height 100%
	&.auto
		height auto

body
	color body-color
	cf()
	min-height 100%
	&.auto
		height auto

.contain
	padding-bottom .2em

.header
	padding 3.2em 0 1.4rem 0
	border-bottom 1px solid border-gray
	& > *
		vertical-align top
		display inline-block
	.head
		i
			font-size .5em
			line-height 1em
			relative top -.2em
			margin-right .7em
			cursor default !important
			color color-red !important
			&.connected
				color color-green !important
		h6
			color body-light
			font-weight 400
			line-height 1.4em

.options
	float right
	.dropdown
		&:hover, &.open
			i
				color body-color
	.toggle
		line-height 5.5em
		i
			relative top -.5em
			color body-light
			margin-left .4em
		img
			height 2.1em
			border-radius 50%

.sparkline
	width 100%
	height 7em
	.highcharts-label.highcharts-no-data
		top 27px !important
		span
			opacity .7
			font-size 1.2em

#keys
	span(1/1)
	padding 2rem 0
	.sub
		padding 0 0 .8rem 0
		font-size 1em
		font-weight 600

.record
	display block
	span(1/1)
	padding 1.4em 2em
	border 1px solid border-gray
	border-bottom 0
	background-color #fff
	&:first-of-type
		border-radius border-radius-normal border-radius-normal 0 0
	&:last-of-type
		border-radius 0 0 border-radius-normal border-radius-normal
		border-bottom 1px solid border-gray
	h6
		display block
		color body-dark
	.float-left, span
		display inline-block
		vertical-align middle
	span
		relative top 1em
		float right
		i
			margin-left 1em
	small
		display block
		color body-light

a.record
	&:hover
		h6
			color primary-color

#key_info
	padding 1.4rem 0
	border-bottom 1px solid border-gray
	.info
		display inline-block
		vertical-align top
		color body-light
		i
			font-size 1.4em
			color body-light
			cursor pointer
			relative top -2px
			&:hover
				color body-dark
		span
			color body-dark
		& + .info
			margin-left 1.4em

#trackers
	padding 2rem 0
	.graph
		width 100%
		height 15em
		background-color #fff
		margin-bottom 2em
		position relative
		border-radius border-radius-normal
		color #fff
		overflow hidden
		.sparkline
			absolute bottom 0
		.stats
			padding 1.4em 2em 1.2em 2em
			border-bottom 1px solid rgba(255, 255, 255, 0.2)
		.sum
			vertical-align top
			display inline-block
		.current
			vertical-align top
			display inline-block
		span
			display inline-block
			float right
			relative top 1.9em
			.increase
				text-align right
				display block
			small
				display block
				margin-top .4em
				color rgba(#fff, 80%)
			i
				opacity .8
				margin-left .2em
		&_clicks
			background-color #E4495C
		&_hits
			background-color #9F89FC
	ul
		& + ul
			margin-top 2em
		li
			border 1px solid border-gray
			border-top 0
			padding .8rem 1rem
			color body-light
			&.header
				h5
					font-size 1.1em
					display inline-block
					vertical-align top
					color body-color
					span
						color lighten(body-light, 35%)
				.search
					float right
					cursor pointer
					i
						font-size 1.32em
						color lighten(primary-color, 40%)
						&:hover
							color primary-color
					& > *
						display inline-block
						vertical-align top
					.filter
						font-size 1em
						padding-left .4em
						line-height 1.32em
						color primary-color
						&:empty:before
							content 'Filter...'
			span
				float right
				color body-color
			&:first-of-type
				border-top 1px solid border-gray
				border-radius border-radius-normal border-radius-normal 0 0

.highcharts-tooltip-box
	fill rgba(0,0,0,.74)

#create
	padding 2em 0
	.info
		h5
			font-size 1em
			margin-bottom .6em
			display block
		p
			color body-light
			line-height 1.8em
			& + p
				margin-top .8em
#account
	padding 2rem 0
	.details, .profile_image
		display inline-block
		vertical-align top
	.profile_image
		float right
		padding 3em 4em
		background-color light-color-smoke
		a
			display block
			margin-top 1.4em
			color body-color
			text-align center
			&:hover
				color body-dark
		img
			height 10em
			border-radius 50%

.empty
	background-color light-color-smoke
	text-align center
	color body-dark
	padding 6em

footer.footer
	padding 1.6rem 0
	border-top 1px solid border-gray
	&.noborder
		border-top 0
		+below('s')
			border-top 1px solid border-gray
	ul
		li
			display inline-block
			vertical-align top
			+below('s')
				padding 1em 0
				text-align center
			& + li
				margin-left 2em
			p
				color body-light
				line-height 1em !important
				font-weight 600
				a
					color body-dark
			a
				color body-light
				font-weight 600
				span
					color body-dark
				&:hover
					color color-primary

.signal
	span
		cursor default !important
		color color-red !important
		&:before
			content 'Disconnected'
		&.connected
			color color-green !important
			&:before
				content 'Connected'

div.error
	background-color lighten(color-red, 85%)
	border 1px solid lighten(color-red, 65%)
	padding 1em
	border-radius border-radius-normal
	margin-top 2em
	display none
	p
		color color-red
		i
			margin-right .4em
			relative top 1px

.downloading, .not_found
	width 100%
	height 100%
	background linear-gradient(60deg, color-primary, #FD8788)
	.logo
		relative top -4em
		width 100%
		text-align center
		img
			max-height 2em
			opacity .4
	.cf
		text-align center
	h1
		font-weight 300
		color #fff
	h3
		color color-primary-text

#activity
	padding 2em 0

.activity
	border-left 2px solid border-gray
	padding 1em 0 1em 2em
	margin-left 1em
	cf()
	p:before
		font-family 'Ionicons'
		absolute left -1.9em
		background-color #fff
		border-radius 50%
		font-size 1.4em
		width 1em
		text-align center
	&.a_hit
		p:before
			color color-purple
			content '\f262'
	&.a_click
		p:before
			content '\f2e3'
			color color-yellow
	p
		display inline-block
		position relative
		color body-light
	small
		display inline-block
		margin-left .5rem
		opacity .5

.flash
	animation-name flash
	animation-duration 1s

@keyframes flash
	0%, 50%, 100%
		background-color #fff
	25%, 75%
		background-color rgba(#FAF1C4,.4)
