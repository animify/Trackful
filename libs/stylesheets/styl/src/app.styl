html
	min-height 100%
	width 100%
	height 100%
	&.auto
		height auto

body
	color body-color
	cf()
	min-height 100%
	height 100%
	&.auto
		height auto
	&.pass
		padding 175px 0

#trackers
	ul li
		border 1px solid border-gray
		border-top 0
		padding .8rem
		&.header
			h5
				font-size 1.32em
				color darken(body-color, 30%)
				display inline-block
				vertical-align top
			.search
				float right
				cursor pointer
				i
					font-size 1.32em
					color lighten(primary-color, 40%)
					&:hover
						color primary-color
				& > *
					display inline-block
					vertical-align top
				.filter
					font-size 1em
					padding-left .4em
					line-height 1.32em
					color primary-color
					&:empty:before
						content 'Filter...'
		span
			float right
			font-weight 600
			color darken(body-color, 30%)
		&:first-of-type
			border-top 1px solid border-gray
