.modal
	fixed top left
	width 100%
	height 100%
	z-index 4000
	cf()
	display none
	.input
		margin-top 1.4em
		input
			min-width 0
	.close
		fixed top 2em right 2.2em
		width 3em
		height 3em
		border-radius 50%
		background-color rgba(#fff,.5)
		text-align center
		i
			font-size 3em
			color #000
		&:hover
			background-color rgba(#fff,.8)
	.overlay
		background-color rgba(#000,.39)
		width 100%
		height 100%
		backdrop-filter blur(10px)
		-webkit-backdrop-filter: blur(10px)
	.box
		absolute top 50%
		left 50%
		transform translate(-50%, -50%)
		border-radius border-radius-normal
		background-color #fff
		width 40%
		overflow hidden
		display none
		box-shadow: 0 8px 16px rgba(0, 0, 0, .08), 0 2px 6px rgba(0, 0, 0, .04)
		&-body
			padding 4em 2em 7.2em 2em
			text-align center
			h5
				line-height 2em
			p
				color body-light
		&-footer
			padding 1.4em 2em 1.4em 2em
			width 100%
			background-color light-color-smoke
			absolute bottom 0
			.buttons.simple
				a
					color body-dark
					&.cancel
						color body-light
					& + a
						margin-left 2em
	&.log_sign
		.box
			width 28%
			min-width 28em
		.box-body
			padding 2.4em 3em 2.4em 3em
		.box-footer
			position relative
			text-align center
			p
				color body-light
			a + a
				margin-top 1em
			a + p
				margin-top 1.2em
