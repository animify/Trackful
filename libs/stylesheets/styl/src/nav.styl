.nav
	cf()
	.dropdown
		.menu
			width auto
		.input input
			width 20em
			min-width 20em
			background-color light-color-smoke
			height 2.2em
			padding 1em .8em
			margin-top .6em
			border-radius border-radius-normal
			color body-color
	.item
		padding 0 !important
	.time
		float right
		padding 1.2em 0 !important
	.options
		margin-left .4em
		a + a
			margin-left 2em
		& > a, .toggle
			display inline-block
			vertical-align top
			cursor pointer
			color body-light
			position relative
			line-height 2em
			font-weight 600
			i
				color body-color
				font-size 1.8em
			&:hover
				color body-dark
				i
					color primary-color
		&.desktop
			+below('s')
				fixed top 3em left
				margin 0
				width 100%
				text-align center
				z-index -1
				a
					padding 1em 0
					background-color #fff
					width 100%
					margin 0 !important
					border-bottom 1px solid border-gray
		&.mobile
			display none
			& > i
				font-size 1.9em
				relative top 3px
				display block

	&.light
		.options
			& > a
				color color-primary-text
				&:hover
					color #fff
