.module
	position relative
	background-color #fff
	box-shadow 0 1px 2px 0 box-shadow-gray
	border 1px solid border-gray
	border-radius border-radius-normal
	margin 1em 0
	padding 1.3em
	.antiScroll
		overflow hidden
		margin 0 -1.8em
		cf()
	.section
		margin -1em 0
		padding 1.3em
		overflow auto
		display block
		& + .section
			border-top 1px solid border-gray
