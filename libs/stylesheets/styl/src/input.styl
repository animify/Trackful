.input
	position relative
	label
		display block
		line-height 1.3em
		font-weight 600
	small
		display block
		color body-light
		padding-bottom .6rem
		font-size 1em
	input[disabled], &.disabled
		cursor default
		pointer-events none
	input, textarea
		font-family font-family-standard
		font-size font-size-standard
		color body-color
		margin 0
		font-size font-size-standard
		max-width 100%
		height em-height
		line-height 1em
		padding 1em 1.2em
		outline 0
		border-radius 0
		text-align left
		border 1px solid border-gray
		transition border-color 0.14s ease
		min-width 30em
		background-color #fff
		&.error
			border-color color-red
		&:focus
			border-color color-primary
		+placeholder()
			color body-light
	textarea
		&:not([rows])
			min-height 8em
			max-height 22em
		line-height 1.2em
		min-height 3em
		width 100%
		resize vertical
	&.transparent
		input
			padding 0
			background-color transparent
			border 0
	& + .input
		margin-top 1.6rem
	&.block
		input
			width 100%
.action
	input
		border-radius border-radius-normal 0 0 border-radius-normal
		display inline-block
		vertical-align top
		& + .button
			border-radius 0 border-radius-normal border-radius-normal 0
			display inline-block
			vertical-align top
			font-size font-size-standard
	.button
		border-radius border-radius-normal 0 0 border-radius-normal
		display inline-block
		vertical-align top
		font-size font-size-standard
		& + input
			border-radius 0 border-radius-normal border-radius-normal 0
			display inline-block
			vertical-align top
