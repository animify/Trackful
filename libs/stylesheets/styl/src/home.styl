section.module
	padding 6em 0
	position relative
	h4
		color body-dark
		line-height 1.9em
		i
			margin-right .4em
		a
			i
				margin-left .4em
				relative top 1px
	h6
		color lighten(body-color, 35%)
		line-height 1.8em
		& + h4
			margin-top 1.6em
	&.hasimg
		padding 6em 0 4em 0
	&.hero
		padding 7.4em 0 12em 0
		text-align center
		background-color #0e1320
		h2
			color #fff
			font-weight 300
			line-height 1.4em
			margin-bottom .3em
		h6
			color body-light
			line-height 1.7em
		.button-group
			margin-top 2.5em
			small
				display block
				margin-top 1.7em
				color lighten(body-color, 10%)
			a.button
				padding 0 6em
				i
					margin-right .3em
				& + a.button
					margin-left 1em
	.heroimg
		img
			border-radius 8px
			box-shadow: 0 8px 16px rgba(0, 0, 0, .08), 0 2px 6px rgba(0, 0, 0, .04)
			width 90%
			relative top -1em
			float right
	&.bg
		background-color light-color-smoke

header.nav
	background-color #0e1320
	padding 2.2em 3em
	.logo
		display inline-block
		vertical-align top
		relative top -5px
		img
			height 24px
