section.module
	padding 4em 0
	position relative
	h4
		color body-dark
		line-height 1.8em
	p
		color body-light
		line-height 1.8em
	&.hero
		padding 12em 0 12em 0
		text-align center
		h2
			color body-dark
			font-weight 300
			line-height 2em
		h6
			color body-light
			line-height 1.7em
		.button-group
			margin-top 2.5em
			small
				display block
				margin-top 1.7em
				color dark-color-smoke
			a.button
				i
					margin-right .3em
				& + a.button
					margin-left 1em
	.heroimg
		img
			border-radius 8px
			box-shadow: 0 8px 16px rgba(0, 0, 0, .08), 0 2px 6px rgba(0, 0, 0, .04)
			width 90%
			relative top -8em
			float right
	&.bg
		background-color light-color-smoke
