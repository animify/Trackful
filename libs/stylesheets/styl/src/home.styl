section.module
	padding 6em 0
	position relative
	h4
		color body-dark
		line-height 1.9em
		i
			margin-right .4em
		a
			i
				margin-left .4em
				relative top 1px
	p
		color lighten(body-color, 35%)
		line-height 1.8em
		font-size 1.2em
		& + h4
			margin-top 1.6em
	&.hasimg
		padding 6em 0 4em 0
	&.hero
		padding 7.4em 0 12em 0
		text-align center
		background-color #0e1320
		h2
			color #fff
			line-height 1.4em
			margin-bottom .3em
		h6
			color body-light
			line-height 1.7em
			font-weight 400
		.button-group
			margin-top 2.5em
			small
				display block
				margin-top 1.7em
				color lighten(body-color, 10%)
			a.button
				padding 0 6em
				i
					margin-right .3em
				& + a.button
					margin-left 1em
	&.page
		background-color color-primary
		text-align center
		padding 3em 0 6em 0
		margin-bottom 2em
		h3
			color #fff
		h6
			color color-primary-text
			margin-top .8em
			font-weight 300
	.heroimg
		img
			border-radius 8px
			box-shadow: 0 8px 16px rgba(0, 0, 0, .08), 0 2px 6px rgba(0, 0, 0, .04)
			width 90%
			relative top -1em
			float right
	&.bg
		background-color light-color-smoke

section.step
	position relative
	padding 3em 0
	h5
		margin-bottom 1em
		span
			absolute left -1.4em top -3px
			width 1.8rem
			height 1.8rem
			line-height 1.8rem
			text-align center
			border-radius 50%
			background-color color-primary
			color #fff
	p
		color body-light

header.nav
	background-color #0e1320
	padding 2.2em 3em
	.logo
		display inline-block
		vertical-align top
		img
			height 24px
