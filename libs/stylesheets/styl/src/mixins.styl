$grid
	padding 0 grid-padding
	*zoom 1
	float left
	clear none
	text-align inherit
	margin-left 0%
	margin-right 0%
	&:before, &:after
		display table
		content ''
	&:after
		clear both

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}

image-size(s)
	img
		width lookup('image-' + s)
		height auto

grid(n)
	width percentage(n/grid-length)

text-color(c)
	color lookup('color-' + c)

btn-border(c)
	box-shadow inset 0px 0px 0px 1px lookup('color-' + c)

btn-size(c)
	font-size lookup('button-' + c)

btn-color(c)
	color lookup('text-button-' + c)

btn-color-outlined(c)
	color lookup('color-' + c)

btn-background(c)
	background linear-gradient(top, lookup('color-' + c), darken(lookup('color-' + c), 15%))

btn-background-hover(c)
	background linear-gradient(top, lighten(lookup('color-' + c), 5%), darken(lookup('color-' + c), 12%))
