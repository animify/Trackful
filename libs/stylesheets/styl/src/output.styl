section.display
	width 100%
	height 100%
	display flex
	justify-content center
	.inner
		display flex
		flex-direction column
		justify-content center
	img
		display block
		margin 0 auto
		width auto
		height auto
		max-height 74%
		max-width 74%

.name
	padding 2em 0
	font-size 1.1em
	color body-light
	letter-spacing .03em

.user.pinned
	top 2em
	position fixed
	right 2em
	& .toggle > *
		display inline-block
		vertical-align top
		color body-color
	img
		border-radius border-radius-normal
		margin-right .8em
		opacity .7
	span
		margin-right .1em
		relative top .2em
	i
		relative top -2px
		opacity .7
	&:hover, &.open
		& .toggle > *
			color body-light
			cursor pointer
			opacity 1

.logo.pinned
	top 2em
	position fixed
	left 2em
