.progress
	background-color background-light-gray
	cf()
	border-radius border-radius-normal
	height 1.7em
	content ''
	.bar
		height 100%
		border-radius border-radius-normal
		background-color darken(background-light-gray, 62%)
		position relative
		width 0
		.status
			color #fff
			absolute right 8px
			opacity 0.8
			font-size .875em
			line-height 1.9125em
			display none
	&.tiny
		height 0.3em
	&.small
		height 0.8em
	&.large
		height 2.7em
		.status
			line-height 2.6em
			font-size 1em
	&:not(.tiny):not(.small)
		.bar.show
			.status
				display block
