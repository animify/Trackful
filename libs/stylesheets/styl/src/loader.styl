.loader
	border-style solid
	border-width .5em
	border-color rgba(255, 255, 255, 0.2)
	border-left-color #ffffff
	width 5em
	height 5em
	border-radius 50%
	animation spin 1.3s infinite linear
	&.disabled, &.hidden
		display none
	&.inline
		display inline-block
	&.small
		width 3.3em
		height 3.3em
		border-width .35em
	&.large
		width 5em
		height 5em
	&.dark
		border-color rgba(0, 0, 0, 0.2)
		border-left-color text-grey
