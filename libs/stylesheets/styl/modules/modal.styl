.modal
  width 100%
  height 100%
  fixed top left
  visibility hidden
  transition all ease .3s
  .overlay
    background-color rgba(255,255,255,.98)
    display flex
    align-items center
    flex-direction row
    width 100%
    height 100%
    transition all cubic-bezier(0.68, -0.55, 0.27, 1.55) 0.4s
    opacity 0
    justify-content center
    .box
      transform scale(0)
      opacity 0
      transition all cubic-bezier(0.39, -0.49, 0, 1.72) 0.4s
      height auto
      width 80%
      align-self center
      max-width 50rem
      cf()
      text-align center
  .close
    fixed top 2rem right 2rem
    background-color border-grey
    color text-default
    transition all cubic-bezier(0.39, -0.49, 0, 1.72) 0.4s
    width 3rem
    height 3rem
    border-radius 50%
    text-align center
    padding .72rem 0
    opacity 0
    transform scale(0)
    &:hover
      background-color color-primary
      color #fff
  &.open
    width 100%
    height 100%
    visibility visible
    .overlay
      opacity 1
    .box, .close
      transform scale(1)
      opacity 1
